<p id="notice"><%= notice %></p>

<div class="col-md-12 col-md-offset-1">

  <div class="panel-default">

  <div class="panel-heading"><h1>List of Product Items</h1></div>

  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Description</th>
        <th>Qty Arrived</th>
        <th>MSRP</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_items.each do |product_item| %>
        <tr>
          <td><%= product_item.product_name %></td>
          <td><%= product_item.description %></td>
          <td><%= product_item.qty %></td>
          <td><%= product_item.msrp %></td>
          <td><%= link_to 'Show', product_item %></td>
          <td><%= link_to 'Edit', edit_product_item_path(product_item) %></td>
          <td><%= link_to 'Destroy', product_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product item', new_product_item_path, class: 'btn btn-primary' %>

  </div>
</div>